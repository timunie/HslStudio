<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:HslStudio.Scada.Controls">
    <Design.PreviewWith>
        <controls:Cylinder />
    </Design.PreviewWith>

    <Style Selector="controls|Cylinder">
        <!-- Set Defaults -->
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="BorderBrush" Value="White" />
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Template">
            <ControlTemplate TargetType="controls:Cylinder">
                <Ellipse Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                         Fill="{TemplateBinding Foreground}" StrokeThickness="1" Stroke="{TemplateBinding BorderBrush}" />
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="controls|Cylinder:alarm">

        <Setter Property="Foreground" Value="Orange" />
    </Style>


</Styles>